[alias]
    # colored log output
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative

    # log pretty
    lp = log --abbrev-commit --pretty=oneline --reverse origin..

    # branch list
    bl = branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:green)%(committerdate:relative)%(color:reset) - %(authorname)'

    # Unstage previous commit
    undo = !git reset HEAD^

    reset-self = !git remote update && git reset --hard origin/jwhiteneck/`git rev-parse --abbrev-ref HEAD`

    # Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	remotes = remote -v
[user]
	name = James Whiteneck
	email = jwhiteneck@microsoft.com
[diff]
    color = auto
    noprefix = true
[pager]
    color = true
[status]
    color = auto
    submodulesummary = true
[rerere]
    enabled = true
[alias]
    graph = log --graph --decorate
    stat = status -s
    co = checkout
    files = log --graph --decorate --stat --pretty=oneline
[core]
    editor=vim
	excludesfile = /Users/jwhiteneck/.gitignore_global
    # pager = delta --theme='Monokai Extended'
    pager = diff-so-fancy | less --tabs=4 -RFX
    preloadindex = true
    fscache = true
#   autocrlf = true
    filemode = false
[interactive]
    diffFilter = delta --color-only
[color]
    ui = always
[color "diff"]
    meta = yellow bold
    commit = blue normal bold
    frag = blue bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = red
    untracked = cyan
[http]
    sslCAinfo = /home/jwhiteneck/.certifications/cacert.pem
    sslverify = false
[push]
    default = current
[help]
    autocorrect = 20
[gc]
    auto = 256
[merge]
	conflictstyle = diff3
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
